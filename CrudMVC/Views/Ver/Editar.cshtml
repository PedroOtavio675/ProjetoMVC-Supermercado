@{
    ViewData["Title"] = "Editor de produtos";
}
@model HomeModel

<div class="text-center">
    <h1 class="display-4">Editar Produto</h1>
    <p>Aqui você pode editar produtos</p>

    <form asp-action="Editar" asp-controller="Ver">
        <div class="mb-3">
            <label for="nome" class="form-label">Novo nome</label>
            <input type="text" class="form-control" placeholder="Novo nome do produto">
        </div>
        <div class="mb-3">
            <label for="preco" class="form-label">Novo preço</label>
            <input type="number" class="form-control" placeholder="Novo preço do produto">
        </div>
        <div class="mb-3">
            <label for="estoque class="form-label">Novo estoque</label>
            <input type="text" class="form-control" placeholder="Novo do produto">
        </div>
        <button type="submit" class="btn btn-primary">Cadastrar Produto</button>
        <a type="submit" class="btn btn-secondary" asp-action="Index" asp-controller="Ver">Voltar</a>
    </form>
</div>
