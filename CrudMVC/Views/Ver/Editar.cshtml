@{
    ViewData["Title"] = "Editor de produtos";
}
@model ProdutoModel

<div class="text-center">
    <h1 class="display-4">Editar Produto</h1>
    <p>Aqui você pode editar produtos</p>

    <form asp-action="AtualizarProduto" asp-controller="Ver" method="post">
        <div class="mb-3">
            <label for="Nome"  class="form-label">Novo nome</label>
            <input type="text" asp-for="Nome" class="form-control" value="@Model.Nome" placeholder="Novo nome do produto">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Preco" class="form-label">Novo preço</label>
            <input type="number" asp-for="Preco" class="form-control" value="@Model.Preco" placeholder="Novo preço do produto">
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Estoque" class="form-label">Novo estoque</label>
            <input type="text" asp-for="Estoque" class="form-control" value="@Model.Estoque" placeholder="Novo do produto">
            <span asp-validation-for="Estoque" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-primary">Editar Produto</button>
        <a type="submit" class="btn btn-secondary" asp-action="Index" asp-controller="Ver">Voltar</a>
    </form>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
