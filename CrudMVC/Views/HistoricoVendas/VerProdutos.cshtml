@{
    ViewData["Title"] = "Listagem de Produtos";
}
@model List<ItemVendaModel>

<div class="text-center">
    <h1 class="display-4">Produtos</h1>
    <p>Aqui você pode ver produtos</p>

    <div class="d-grid gap-z d-md-flex justify-content-md-start">
        <a type="button" class="btn btn-primary" asp-controller="Cadastrar" asp-action="Index">Adicionar produto</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Codigo</th>
                <th scope="col">Nome</th>
                <th scope="col">Preço</th>
                <th scope="col">Quantidade</th>
             
            </tr>
        </thead>
        <tbody>
            
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>

                        <td>@item.Produto</td>
                        <td>@item.ValorUnitario</td>
                        <td>@item.Quantidade</td>
                      
                    </tr>
                }
         
        </tbody>
    </table>
</div>
