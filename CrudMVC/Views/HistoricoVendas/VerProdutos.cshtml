@{
    ViewData["Title"] = "Listagem de Produtos";
}
@model List<ItemVendaModel>

<div class="text-center">
    <h1 class="display-4">Produtos vendidos na venda</h1>
   

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Codigo</th>
                <th scope="col">Nome</th>
                <th scope="col">Preço</th>
                <th scope="col">Quantidade</th>
             
            </tr>
        </thead>
        <tbody>
            
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.ProdutoId</th>

                        <td>@item.Nome</td>
                        <td>@item.ValorUnitario</td>
                        <td>@item.Quantidade</td>
                      
                    </tr>

                }
        <td></td>
        <td></td>
        <th>total: @Model.Sum(i => i.TotalItem)</th>
        <td></td>
        
       
        </tbody>
    </table>
</div>
